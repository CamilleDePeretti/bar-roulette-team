<div id="main-bar-show">
  <div class="show-background">
    <h5 class="text-center font-weight-bold">BAR ROULETTE CHOSE
      <br>
    3 BARS FOR YOU!</h5>

    <div
    id="map"
    style="width: 100%;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>

    <div class="row pl-2 pr-2">
      <% @bars.each do |bar| %>
        <div class="col-12 mt-2">
          <%= render 'bar-mini-card', bar: bar %>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-2 mb-2 width-100">
      <%= render 'shared/clipboard-btn' %>
    </div>

    <div class="d-flex justify-content-center mt-2">
      <%= render 'respin-btn', night: @night %>
    </div>

  </div>
</div>

<div class="show-background">
  <% @bars.each do |bar| %>
    <div id="bar-<%= bar.id %>">
      <a id="back-<%= bar.id %>" href='#'>‚Üê Back</a>
      <%= render 'shared/bar-show', bar: bar %>
    </div>
  <% end %>
</div>

<% @bars.each do |bar| %>
<script>
  document.querySelector('.bar-<%= bar.id %>').addEventListener('click', (event) => {
    // event.preventDefault();
    console.log('clicked <%= bar.name %>');
    document.querySelector('#main-bar-show').style.display = 'none';
    document.querySelector('#bar-<%= bar.id %>').removeAttribute('style');
  });

  document.querySelector('#back-<%= bar.id %>').addEventListener('click', (event) => {
    document.querySelector('#bar-<%= bar.id %>').style.display = 'none';
    document.querySelector('#main-bar-show').removeAttribute('style');
  });
</script>
<% end %>


