<h5>The Bar Roulette chosed 3 bars for you!</h5>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="row mt-1">
  <% @night.bars[0..2].each do |bar| %>
    <div class="col-12 mt-1">
      <%= render 'bar-mini-card', bar: bar %>
    </div>
  <% end %>
</div>

<div>
  <%= render 'shared/clipboard-btn' %>
  <%= render 'shared/social-btn' %>
  <%= render 'shared/slideshow-card' %>

</div>


<button class='spin-btn btn-primary'>
<%link_to "Re-spin the wheel", night_path %>Re-spin the wheel</button>

