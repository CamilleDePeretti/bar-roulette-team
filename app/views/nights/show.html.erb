<h4>Let the magic begin...</h4>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<% @night.bars[0..2].each do |bar| %>
  <%= image_tag bar.photo? %>
  <strong><%= bar.name %></strong>
  <br>
  <%= bar.address %>
  <br>
  <i><%= bar.category %></i>
  <br>
  <br>

<% end %>

<div>
  <%= render 'shared/clipboard-btn' %>
  <%= render 'shared/social-btn' %>
</div>
